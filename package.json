    "postinstall": "lerna run build"
  },
  "devDependencies": {
    "@exile-watch/conventional-changelog-config": "^0.1.1",
    "@exile-watch/typescript-config": "^0.2.0",
    "lerna": "^8.0.2"
  },
  "workspaces": [
    "packages/*"
  ]
