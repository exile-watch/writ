{
  "name": "writ",
  "version": "0.0.0",
  "description": "Design system for exile.watch",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exile-watch/writ.git"
  },
  "author": "Sebastian Krzyzanowski",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/exile-watch/writ/issues"
  },
  "homepage": "https://github.com/exile-watch/writ#readme",
  "scripts": {
    "build": "lerna run build",
    "typecheck": "lerna run typecheck",
    "lerna:bootstrap:changed": "lerna bootstrap --since --include-dependencies --include-dependents --ci",
