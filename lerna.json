{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): publish [skip ci]",
      "commitHooks": false,
      "changelogPreset": "@exile-watch/conventional-changelog-config"
    }
  },
  "packages": [
    "packages/*"
  ]
}
